<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/bg_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/formLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/download"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Connect" />
    </LinearLayout>

    <TextView
        android:id="@+id/sleepMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="취침"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/normalMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formLogin"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        android:text="평상시"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/outMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/formLogin"
        android:layout_centerVertical="true"
        android:layout_marginRight="34dp"
        android:text="외출"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formLogin"
        android:layout_centerHorizontal="true"
        android:text="중지하기" />

    <ImageView
        android:id="@+id/normalI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formLogin"
        android:layout_below="@+id/normalMode"
        android:layout_marginTop="22dp"
        android:src="@drawable/normal1" />

    <ImageView
        android:id="@+id/sleepI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stopButton"
        android:layout_alignTop="@+id/normalI"
        android:src="@drawable/sleep1" />

    <ImageView
        android:id="@+id/outsideI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/formLogin"
        android:layout_alignTop="@+id/sleepI"
        android:src="@drawable/outside1" />

</RelativeLayout>